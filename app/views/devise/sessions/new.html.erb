<% content_for :title do %>Sign in<% end %>

<% hero_block do %>
  <div class="text-center">
    <h1>Welcome back</h1>
    <p class="lead text-muted">
      Enter your credentials to log back in.
    </p>
  </div>
<% end %>

<div class="row">
  <div class="col-md-4 col-md-offset-4">

    <div><%= devise_error_messages! %></div>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "text-left", :role => "form" }) do |f| %>

      <div class="form-group">
        <%= f.email_field :email, :autofocus => true, :class => "form-control", :placeholder => "E-mail address" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, :class => "form-control", :placeholder => "Password" %>
      </div>
      <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <div class="row">
          <div class="col-sm-7">
            <div class="checkbox" style="padding-left: 10px;">
              <label>
                <%= f.check_box :remember_me %>
                Remember me
              </label>
            </div>
          </div>

          <div class="col-sm-5">
            <div class="form-group">
              <%= f.button "Sign in", :type => "submit", :class => "btn btn-primary btn-block", :style => "" %>
            </div>
          </div>
        </div>
      </div>
      <% end -%>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
