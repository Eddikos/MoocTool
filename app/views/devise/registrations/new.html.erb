<% content_for :title do %>Register<% end %>

<% hero_block do %>
  <div class="text-center">
    <h1>Register an account</h1>
    <p class="lead text-muted">
      You can sign up with your Twitter account or your email address.
    </p>
  </div>
<% end %>

<div class="row">
  <div class="col-md-6 text-center">
    <h2>Sign up with Twitter.</h2>
    <!-- <p></p> -->

    <%= link_to "Connect my Twitter account", "/auth/twitter", class: "btn btn-login-with-twitter btn-lg", style: "margin-top: 20px; margin-bottom: 10px;" %>
  </div>

  <div class="col-md-6">

    <div class="well">
      <legend>Sign up with e-mail.</legend>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => "form", :id => "signup-with-email-form", class: "form-horizontal" }) do |f| %>

      <%= devise_error_messages! %>

      <div class="form-group<% if resource.errors[:full_name].present? %> has-error<% end %>">
        <%= f.label :full_name, class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.text_field :full_name, :class => "form-control" %>
        </div>
      </div>

      <div class="form-group<% if resource.errors[:email].present? %> has-error<% end %>">
        <%= f.label :email, class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.email_field :email, :class => "form-control", :placeholder => "you@example.com" %>
          </div>
      </div>

      <div class="form-group<% if resource.errors[:password].present? %> has-error<% end %>">
        <%= f.label :password, class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.password_field :password, :class => "form-control", :placeholder => "New Password" %>
          </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
        <%= f.button "Sign up", :type => "submit", :class => "btn-flat btn btn-primary" %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>


<%= render "devise/shared/links" %>
